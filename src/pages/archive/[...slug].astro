---
import { render } from 'astro:content';
import { getPublished } from '../../lib/content';
import ArticleLayout from '../../layouts/ArticleLayout.astro';

export async function getStaticPaths() {
  const posts = await getPublished('posts', {
    orderBy: (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
  });
  const archivePosts = posts.filter((post) => {
    const slug = post.data.slug ?? post.id;
    return !slug.startsWith('page/');
  });
  return archivePosts.map((post, index) => {
    const prevEntry = archivePosts.at(index - 1);
    const nextEntry = archivePosts.at(index + 1);
    return {
      params: { slug: post.data.slug ?? post.id },
      props: {
        post,
        prev: prevEntry
          ? { href: `/archive/${prevEntry.data.slug ?? prevEntry.id}/`, title: prevEntry.data.title }
          : null,
        next: nextEntry
          ? { href: `/archive/${nextEntry.data.slug ?? nextEntry.id}/`, title: nextEntry.data.title }
          : null
      }
    };
  });
}

const { post, prev, next } = Astro.props;
const { Content } = await render(post);
---

<ArticleLayout entry={post} Content={Content} prev={prev} next={next} />
