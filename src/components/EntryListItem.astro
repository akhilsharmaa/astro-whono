---
import { formatISODate } from '../utils/format';

const {
  href,
  title,
  excerpt,
  date,
  tag
} = Astro.props;
---

<article class="list-item">
  <div class="list-item__row">
    <h3 class="list-item__title">
      <a href={href}>{title}</a>
    </h3>
    <div class="list-item__meta">
      {formatISODate(date)}
      {tag ? <> Â· #{tag}</> : null}
    </div>
  </div>
  {excerpt ? <p class="list-item__excerpt">{excerpt}</p> : null}
</article>
